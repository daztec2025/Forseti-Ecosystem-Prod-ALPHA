# =============================================================================
# Forseti Environment Configuration
# Copy this file to .env and fill in your values
# =============================================================================

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
# For local development with Docker:
DATABASE_URL=postgresql://forseti:forseti_dev_password@localhost:5432/forseti

# For Google Cloud SQL (production):
# DATABASE_URL=postgresql://postgres:YOUR_PASSWORD@/forseti?host=/cloudsql/PROJECT_ID:REGION:INSTANCE_NAME

# -----------------------------------------------------------------------------
# Authentication
# -----------------------------------------------------------------------------
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
JWT_EXPIRES_IN_REMEMBER_ME=30d
BCRYPT_ROUNDS=10

# -----------------------------------------------------------------------------
# API Configuration
# -----------------------------------------------------------------------------
NODE_ENV=development
PORT=4000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# -----------------------------------------------------------------------------
# OAuth Configuration
# -----------------------------------------------------------------------------
# Google OAuth - Get credentials from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Discord OAuth - Get credentials from: https://discord.com/developers/applications
DISCORD_CLIENT_ID=
DISCORD_CLIENT_SECRET=

# OAuth URLs (update for production)
FRONTEND_URL=http://localhost:3000
API_URL=http://localhost:4000

# -----------------------------------------------------------------------------
# AI Race Engineer (Optional)
# -----------------------------------------------------------------------------
# Get your API key from https://console.anthropic.com/
ANTHROPIC_API_KEY=

# -----------------------------------------------------------------------------
# Web Configuration
# -----------------------------------------------------------------------------
NEXT_PUBLIC_API_URL=http://localhost:4000
