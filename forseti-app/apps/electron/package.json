{
  "name": "@repo/electron",
  "version": "0.1.0-alpha",
  "description": "Forseti - iRacing Telemetry & Performance Analytics",
  "author": {
    "name": "Deren Ridley",
    "email": "deren.ridley@gmail.com"
  },
  "license": "SEE LICENSE IN LICENSE.txt",
  "private": true,
  "main": "main.js",
  "scripts": {
    "dev": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "build": {
    "appId": "com.forseti.app",
    "productName": "Forseti",
    "copyright": "Copyright Â© 2025 Deren Ridley. All rights reserved.",
    "icon": "icon.ico",
    "files": [
      "main.js",
      "preload.js",
      "overlay.html",
      "python-install-prompt.html",
      "forseti-logo.png",
      "renderer/**/*"
    ],
    "extraResources": [
      {
        "from": "icon.ico",
        "to": "icon.ico"
      }
    ],
    "extraFiles": [
      {
        "from": "../../../forseti-iracing-bridge",
        "to": "resources/forseti-iracing-bridge",
        "filter": [
          "**/*",
          "!**/__pycache__",
          "!**/*.pyc"
        ]
      },
      {
        "from": "../../../python-embed",
        "to": "resources/python-embed",
        "filter": [
          "**/*"
        ]
      }
    ],
    "directories": {
      "output": "dist"
    },
    "publish": [
      {
        "provider": "generic",
        "url": "https://forsetireleases.blob.core.windows.net/releases",
        "useMultipleRangeRequest": false
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "icon.ico",
      "publisherName": "Deren Ridley",
      "verifyUpdateCodeSignature": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Forseti",
      "runAfterFinish": true,
      "deleteAppDataOnUninstall": false,
      "allowElevation": true,
      "perMachine": false,
      "license": "LICENSE.txt",
      "artifactName": "Forseti-${version}-Alpha-Setup.exe"
    },
    "portable": {
      "artifactName": "Forseti-${version}-Alpha-Portable.exe"
    },
    "mac": {
      "target": [
        "dmg"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    }
  },
  "dependencies": {
    "auto-launch": "^5.0.6",
    "electron-log": "^5.1.7",
    "electron-store": "^11.0.2",
    "electron-updater": "^6.3.9"
  },
  "devDependencies": {
    "electron": "28.0.0",
    "electron-builder": "^24.9.1"
  },
  "engines": {
    "node": ">=22"
  }
}
